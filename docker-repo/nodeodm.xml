<?xml version="1.0" encoding="utf-8"?>
<Container>
<Beta>False</Beta>
<Date>2025-01-12</Date>
<Category>Productivity:</Category>
  <Name>nodeodm</Name>
  <Overview>
    A lightweight REST API to access aerial image processing engines such as ODM or MicMac.
  </Overview>
  <Description>
    NodeODM is a standard API specification for processing aerial images with engines such as ODM. The API is used by clients such as WebODM, CloudODM and PyODM. This repository contains a performant, production-ready reference implementation written in NodeJS.
  </Description>
  <Registry>https://registry.hub.docker.com/u/snoopy86/NodeODM/</Registry>
  <Repository>snoopy86/nodeodm</Repository>
  <Support>https://lime-technology.com/forum/index.php?topic=43610.0</Support>
  <DonateText>Buy me a beer.</DonateText>
  <DonateImg>https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif</DonateImg>
  <DonateLink>https://www.paypal.com/donate/?hosted_button_id=L4PWEX4HZETRA</DonateLink>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
   <Environment>     
    <Variable>
      <Name>NVIDIA_VISIBLE_DEVICES</Name>
      <Value>all</Value>
    </Variable>
	<Variable>
      <Name>NVIDIA_DRIVER_CAPABILITIES</Name>
      <Value>all</Value>
    </Variable>
  </Environment>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>3033</HostPort>
        <ContainerPort>3000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/WebODM/node/</HostDir>
      <ContainerDir>/var/www/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Version></Version>
  <WebUI>http://[IP]:[PORT:3033]/</WebUI>
</Container>
